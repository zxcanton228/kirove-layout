{
	"compilerOptions": {
		"target": "ES2021",
		"module": "commonjs",
		"lib": ["ES2021"],
		"baseUrl": "./",
		"paths": {
			"src/*": ["src/*"],
			"utils/*": ["src/utils/*"],
			"types/*": ["src/types/*"]
		},
		"outDir": "dist",
		"esModuleInterop": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
