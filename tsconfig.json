{
	"compilerOptions": {
		"target": "ES2021",
		"module": "commonjs",
		"lib": ["ES2021"],

		// Alias

		"outDir": "dist",

		// WebPack
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
